<!DOCTYPE html>
<html id="Page" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Title -->
    <title>@ViewData["Title"] - DKWeb</title>

    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="">

    <!-- Links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Custom -->
    <link rel="stylesheet" href="~/css/Page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Flexbox.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Override.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/FooterResponsiveness.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Presentation.css" asp-append-version="true" />

</head>

<body >
    <header id="PageHeader" style="background-color: var(--page-primary);">
        <partial name="/Pages/Partial/_NavBar.cshtml" />
    </header>
    

    <div id="PageContent">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="PageFooter" class="border-top text-muted text-white">
        <!-- Large screen -->
        <div class="footer-large row text-white bg-dark pt-4 pb-4">
            <!-- Empty -->
            <div class="col-2"></div>

            <!-- Copyright -->
            <div class="text-center col-8">&copy; 2023 - DKWeb</div>
            
            <!-- Contacts (again) -->
            <div class="col-2 row">

                <div class="col-3"></div>
                <div class="col-8">
                    <div class="row">
                        <a target=”_blank” href="https://www.facebook.com/Dimistov/" class="col-4"><i class="bi bi-facebook" style="color:white"></i></a>
                        <a target=”_blank” href="https://discordapp.com/users/888138841427427369" class="col-4"><i class="bi bi-discord" style="color:white"></i></a>
                        <a target=”_blank” href="https://twitter.com/Dimistov" class="col-4"><i class="bi bi-twitter" style="color:white"></i></a>
                    </div>
                </div>
                <div class="col-1"></div>

            </div>
        </div>

        <!-- Small screen -->
        <div class="footer-small text-white bg-dark pt-2 pb-2">

            <!-- Contacts -->
            <div class="footer-item row">

                <div class="col-2"></div>
                <div class="col-8">
                    <div class="row">
                        <a target=”_blank” href="https://www.facebook.com/Dimistov/" class="col-4"><i class="bi bi-facebook" style="color:white"></i></a>
                        <a target=”_blank” href="https://discordapp.com/users/888138841427427369" class="col-4"><i class="bi bi-discord" style="color:white"></i></a>
                        <a target=”_blank” href="https://twitter.com/Dimistov" class="col-4"><i class="bi bi-twitter" style="color:white"></i></a>
                    </div>
                </div>
                <div class="col-2"></div>

            </div>

            <!-- Copyright -->
            <div class="footer-item text-center" style="margin-bottom:5px;">&copy; 2023 - DKWeb</div>
        </div>

    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/e7e5670cb4.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Custom -->
    <script src="~/js/StickyNavbar.js"></script>
    <script src="~/js/Cookies.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>